{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "src/",
    "paths": {
      "components": ["src/components/*"],
      "hooks": ["src/hooks/*"]
    },
    "types": ["src/components/Button/Button.types.ts"]
  },
  "exclude": ["node_modules", "dist"]
}
